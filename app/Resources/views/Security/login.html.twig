{% extends 'base.html.twig' %}

{% block title %}
    Sign In
{% endblock %}

{% block body %}

    {% if error %}
        <div style="color: red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('login_check') }}" method="post">
        <div class="container-fluid text-center">
            <div class="row content">

                <div style="width:500px; margin:0 auto;">
                    <div class="well">
                        <fieldset>
                            <legend><i class="fa fa-lock"></i> Login to QuickDine</legend>
                            <div class="form-group">
                                <label for="username">Username:</label>
                                <input type="text" id="username" name="_username" value="" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input type="password" id="password" name="_password" value="" class="form-control" />
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                            <input type="hidden" name="_target_path" value="redirect">
                            <button type="submit" class="btn btn-info">
                                <i class="fa fa-sign-in"></i> Sign in
                            </button>
                        </fieldset>

                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

    {% block javascripts %}
    {% endblock %}